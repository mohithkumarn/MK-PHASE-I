# include <iostream>

void main()
{
    char operator;
    float no1, no2;
    cout << "WELCOME LETS BEGIN CALCULATING";
    cout << "for addition(+),subraction(-),multiplication(*),division(/),remainder(%)";
    cout << "Enter operator either + or - or * or / or % ";
    cin >> op;

    cout << "Enter two numbers:";
    cin >> num1 >> num2;

    switch(operator)
    {
        case '+':
            cout << no1+no2;
            break;

        case '-':
            cout << no1-no2;
            break;

        case '*':
            cout << no1*no2;
            break;

        case '/':
            cout << no1/no2;
            break;
        
        case '%':
             cout<<no1%no2;
             break;

        default:
         cout << "Error! operator is not correct";
            break;
            }}
